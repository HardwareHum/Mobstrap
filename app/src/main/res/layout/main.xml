<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 android:orientation="vertical"
 android:background="#121212">

 <LinearLayout
  android:id="@+id/linear1"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="12dp"
  android:background="@drawable/background_dark"
  android:gravity="center"
  android:orientation="horizontal">

  <LinearLayout
   android:id="@+id/linear2"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:padding="10dp"
   android:orientation="horizontal"
   android:background="#222222"
   android:elevation="4dp"
   android:layout_margin="8dp"
   android:clipToPadding="false">

   <LinearLayout
    android:id="@+id/linear10"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
     android:id="@+id/imageview1"
     android:layout_width="180dp"
     android:layout_height="50dp"
     android:layout_marginEnd="25dp"
     android:background="@drawable/logo_custom"
     android:src="@drawable/nothing80"
     android:scaleType="fitCenter" />

    <TextView
     android:id="@+id/textview_version"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:text=""
     android:textSize="13sp"
     android:textColor="#FFDDDDDD"
     android:layout_marginTop="6dp" />
   </LinearLayout>

   <LinearLayout
    android:id="@+id/linear5"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="10dp"
    android:orientation="vertical">

    <!-- Launch Button -->
    <LinearLayout
     android:id="@+id/button_launchrbx"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="4dp"
     android:background="#1E88E5"
     android:gravity="center_vertical|start"
     android:layout_margin="6dp"
     android:orientation="horizontal"
     android:cornerRadius="8dp">

     <TextView
      android:id="@+id/textview_launch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:padding="6dp"
      android:text="@string/launch_roblox"
      android:textSize="19sp"
      android:textColor="#FFFFFF" />

     <LinearLayout
      android:id="@+id/layout_launch_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:orientation="horizontal">

      <ImageView
       android:id="@+id/imageview_launch"
       android:layout_width="28dp"
       android:layout_height="28dp"
       android:src="@drawable/nothing80"
       android:background="@drawable/arrow_blue"
       android:scaleType="centerInside" />
     </LinearLayout>
    </LinearLayout>

    <!-- Configure Settings Button -->
    <LinearLayout
     android:id="@+id/button_configuresettings"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="4dp"
     android:background="#43A047"
     android:gravity="center_vertical|start"
     android:layout_margin="6dp"
     android:orientation="horizontal"
     android:cornerRadius="8dp">

     <TextView
      android:id="@+id/textview_configure"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:padding="6dp"
      android:text="@string/configure_settings"
      android:textSize="19sp"
      android:textColor="#FFFFFF" />

     <LinearLayout
      android:id="@+id/layout_configure_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:orientation="horizontal">

      <ImageView
       android:id="@+id/imageview_configure"
       android:layout_width="28dp"
       android:layout_height="28dp"
       android:src="@drawable/nothing80"
       android:background="@drawable/arrow_green"
       android:scaleType="centerInside" />
     </LinearLayout>
    </LinearLayout>

    <!-- About Button -->
    <LinearLayout
     android:id="@+id/button_about"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="4dp"
     android:background="#F4511E"
     android:gravity="center_vertical|start"
     android:layout_margin="6dp"
     android:orientation="horizontal"
     android:cornerRadius="8dp">

     <TextView
      android:id="@+id/textview_about"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:padding="6dp"
      android:text="@string/about"
      android:textSize="19sp"
      android:textColor="#FFFFFF" />

     <LinearLayout
      android:id="@+id/layout_about_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:gravity="center"
      android:orientation="horizontal">

      <ImageView
       android:id="@+id/imageview_about"
       android:layout_width="28dp"
       android:layout_height="28dp"
       android:src="@drawable/nothing80"
       android:background="@drawable/arrow_orange"
       android:scaleType="centerInside" />
     </LinearLayout>
    </LinearLayout>

   </LinearLayout>
  </LinearLayout>
 </LinearLayout>
</LinearLayout>
